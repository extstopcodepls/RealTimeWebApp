@{
    ViewBag.Title = "Index";
}

<div class="">
    <h1 class="border-bottom-1-gray">Panel Admina - Sekcja produktów</h1>
    <div class="row">
        <div class="col-md-2">
            <label for="productname">Nazwa produktu</label>
            <input id="productName" type="text" name="productname" class="form-control" />
        </div>
        <div class="col-md-2">
            <label for="desc">Opis produktu</label>
            <input id="productDesc" type="text" name="desc" class="form-control" />
        </div>
        <div class="col-md-2">
            <label for="price">Cena</label>
            <input id="productPrice" type="text" name="price" class="form-control" />
        </div>
        <div class="col-md-2">
            <button style="margin-top: 25px;" id="addProduct" type="button" class="btn btn-primary">Dodaj</button>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Product Id</th>
                    <th>Product Name</th>
                    <th>Product Description</th>
                    <th>Product Price</th>
                    <th>Product UpVote</th>
                    <th>Product DownVote</th>
                    <th>Reset</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    
                </tr>
            </tbody>
        </table>
    </div>
</div>
